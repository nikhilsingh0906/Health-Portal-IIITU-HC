  <!-- Custom CSS -->
  <link rel="stylesheet" href="custom.css">

  <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  <title>IIITU HC</title>
</head>
<body>
<div class="container-fluid" id="registration">
    <h2 class="text-center">Create an Account</h2>
    <div class="row mt-4 mb-4">
      <div class="col-md-6 offset-md-3">
        <form action="/register" class="shadow-lg p-4" method="POST">
          <div class="form-group">
            <i class="fas fa-user"></i><label for="name" class="pl-2 font-weight-bold">Name</label><input type="text"
              class="form-control" placeholder="Name" name="name">
          </div>
          <div class="form-group">
            <i class="fas fa-envelope"></i><label for="email" class="pl-2 font-weight-bold">Email</label><input type="email"
              class="form-control" placeholder="Email" name="email">
            <!--Add text-white below if want text color white-->
            <small class="form-text">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <i class="fas fa-key"></i><label for="pass" class="pl-2 font-weight-bold">New
              Password</label><input type="password" class="form-control PasswordClass" placeholder="Password" name="password">
              <img src="eye.png" alt="" style="cursor: pointer;position: absolute;right: 3rem;top: 15.8rem;width: 2.5rem;width: 2.1rem;" class="EyeImage" />


          </div>
          <p><input type="checkbox" required name="terms"> I accept the <u>Terms and Conditions</u></p>
          <button type="submit" class="btn btn-primary mt-5 btn-block shadow-sm font-weight-bold" name="rSignup">Sign Up</button>
          <a href="patientlogin" class="btn btn-light" style="text-decoration: underline;">Go to Login</a>
          <a href="index" class="btn btn-light" style="text-decoration: underline; float: right;">Home</a>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
<script>
  $(".EyeImage").unbind("click")
$('.EyeImage').on('click', function() {

let type = $('.PasswordClass').attr('type')
if (type == "text") {
   
  $('.PasswordClass').attr('type', 'password');
} else {
    $('.PasswordClass').attr('type', 'text');
    
}
});
</script>

